@page
@model VehicleDepot.Pages.Vehicles.IndexModel

@{
    ViewData["Title"] = "Vehicles";
}

<h1>Find Your Vehicle</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
        <select asp-for="VehicleMake" asp-items="Model.Makes">
            <option value="">Make</option>
        </select>
        <select asp-for="VehicleModel" asp-items="Model.Models">
            <option value="">Model</option>
        </select>
    </p>
</form>

<div class="row">
    @if (Model.Vehicle.Any())
    {
        @foreach (var vehicle in Model.Vehicle)
        {
            <div class="col-xs-12 col-sm-6 col-md-4">
                <a asp-page="./Details" asp-route-uid="@vehicle.ID">
                    <div class="product-grids product-item">
                        <div class="product-img">
                            <img class="image-product" src="@vehicle.ImageString" alt="" />
                        </div>
                        <h4>@vehicle.Model</h4>
                        <h5>$@vehicle.Price</h5>
                    </div>
                </a>
            </div>
        }

        if (Model.TotalPages > 1)
        {
            <div class="col-12">
                @if (Model.ShowPrevious)
                {
                    <a asp-page="./Index" asp-route-CurrentPage="@(Model.CurrentPage - 1)" class="btn btn-primary">Previous</a>
                }
                @if (Model.ShowNext)
                {
                    <a asp-page="./Index" asp-route-CurrentPage="@(Model.CurrentPage + 1)" class="btn btn-primary">Next</a>
                }
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    There are currently no vehicles in the data base.
                </div>
            </div>
        </div>
    }
</div>

